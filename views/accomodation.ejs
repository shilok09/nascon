<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>NASCON Accommodation Form</title>
  <style>
    body {
      margin: 0;
      background: #f9f9f9;
      font-family: 'Segoe UI', sans-serif;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
    }

    .container {
      position: relative;
      width: 400px;
      height: 550px;
      perspective: 1000px;
    }

    .card {
      width: 100%;
      height: 100%;
      background: white;
      border-radius: 20px;
      box-shadow: 0 15px 30px rgba(0,0,0,0.1);
      overflow: hidden;
      position: absolute;
      top: 0;
      left: 0;
      transition: transform 0.6s ease-in-out;
      backface-visibility: hidden;
    }


    .card.thank-you {
      background: #3b2ff5;
      color: white;
      transform: rotateY(180deg);
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      padding: 30px 25px;
    }

    .thank-you h1 {
      font-size: 32px;
      margin: 0;
    }

    .thank-you p {
      font-size: 16px;
      margin: 0;
    }

    .thank-you .next {
      text-align: right;
      font-size: 14px;
      cursor: pointer;
    }

    .card-front {
      padding: 30px 25px;
    }

    h2 {
      margin-bottom: 20px;
    }

    .input-group {
      margin-bottom: 16px;
    }

    .input-group label {
      display: block;
      font-size: 14px;
      margin-bottom: 6px;
    }

    .input-group input,
    .input-group select,
    .input-group textarea {
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 8px;
      font-size: 14px;
      outline: none;
    }
    .input-group{
        margin-right: 20px;
    }
    .send-btn {
      background: #3b2ff5;
      color: white;
      border: none;
      width: 100%;
      padding: 12px;
      border-radius: 10px;
      font-size: 16px;
      cursor: pointer;
      transition: 0.3s;
    }

    .send-btn:hover {
      background: #2e24c4;
    }

    .close-btn {
      position: absolute;
      top: 18px;
      right: 25px;
      font-size: 20px;
      cursor: pointer;
      color: #aaa;
    }

    .flip .form-card {
      transform: rotateY(180deg);
    }

    .flip .thank-you {
      transform: rotateY(0deg);
    }
    .card.thank-you .logo {
    display: block;
    margin: 40px auto;
    width: 160px; /* adjust size as needed */
    height: auto;
    }

  </style>
</head>
<body>

<div class="container" id="formContainer">
  <!-- Form Card -->
  <div class="card form-card" >
    <span class="close-btn" onclick="closeForm()">×</span>
    <div class="card-front">
      <h2>NASCON Accommodation</h2>
      <form id="accommodationForm">
        <div class="input-group">
          <label>Full Name</label>
          <input type="text" required>
        </div>
        <div class="input-group">
          <label>Email</label>
          <input type="email" required>
        </div>
        <div class="input-group">
          <label>University Name</label>
          <input type="text" required>
        </div>
        <div class="input-group">
          <label>Contact Number</label>
          <input type="tel" required>
        </div>
        <div class="input-group">
          <label>Participants</label>
          <input type="number" min="1" required>
        </div>
        <button type="submit" class="send-btn">Submit Request →</button>
      </form>
    </div>
  </div>

  <!-- Thank You Card -->
  <div class="card thank-you">
    <span class="close-btn" onclick="closeForm()">×</span>
    <div>
      <h1>Thank You.</h1>
      <p>For Particpanting in NaSCon!</p>
    </div>
    <div class="next" onclick="closeForm()">NEXT →</div>
  </div>
</div>

<script>
  const form = document.getElementById('accommodationForm');
  const container = document.getElementById('formContainer');

  form.addEventListener('submit', function(e) {
    e.preventDefault();
    container.classList.add('flip');
  });

  function closeForm() {
    container.classList.remove('flip');
    form.reset();
  }
</script>

</body>
</html>
